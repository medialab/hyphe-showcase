<html lang="en">

<head>
  <meta charset="UTF-8">
  <link rel='icon' href='/assets/favicon.ico' type='image/x-icon' />
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
  <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/assets/vitrine.css">
  <title> {{title}} </title>
</head>

<body>

  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer">
    <div class="mdl-layout__drawer">
      <div class="drawer_title">
        <img src="/assets/HYPHE.svg" alt="hyphe logo">
        <h2>hyphe showcase</h2>
      </div>
      <nav class="mdl-navigation">
        <a class="mdl-navigation__link" href="/index.html">Projects</a>
        <a class="mdl-navigation__link" href="/about.html">About</a>
        <a class="mdl-navigation__link" style="position: absolute; bottom: 5px" href="https://medialab.sciencespo.fr/" target="_blank"> <img src="/assets/medialab.png" alt="medialab logo"></a>

      </nav>
    </div>

    <main class="mdl-layout__content">

      <h1>
        {{title}}
      </h1>

      {{#if short_abstract}}
        <p>
          <i>
            <dd>{{short_abstract}}</dd>
          </i>
        </p>
      {{/if}}

      <div class="graph-embed">
        <iframe allowfullscreen style="border: none; width: 100%; height: 500px" src={{url_embed}} alt="graph embed">
        </iframe>
      </div>


      <div class="info-display">

        <div style=" display:flex; flex-direction: column; justify-content: flex-start; margin: 16px; flex-wrap: wrap; flex: 1">
          <div style=" display:flex">
            <i class="material-icons mdl-list__item-icon">people</i>
            <div style="display:flex; flex-direction: column; margin-left: 5px; ">
              <p>
                <b>Authors: </b>
                <ul>
                  {{#each authors as |author|}}
                    <li>{{author}} </li>
                  {{/each}}
                </ul>
              </p>
            </div>
          </div>

          <div style=" display:flex">
            <i class="material-icons mdl-list__item-icon">calendar_today</i>
            <div style="display:flex; flex-direction: column; margin-left: 5px; ">
              <p>
                <b>Publication date:</b>
                <div> {{year}} </div>
              </p>
            </div>
          </div>
          <div style=" display:flex">
            <i class="material-icons mdl-list__item-icon">link</i>
            <div style="display:flex; flex-direction: column; margin-left: 5px; "> <b>Publications about this topic: </b>
              <ul>
                {{#each publications as |publication|}}
                  <li><a href={{publication.link}}>{{publication.link}}</a> </li>
                {{/each}}
              </ul>
            </div>
          </div>

        </div>


        <div style=" display:flex;  margin-top: 16px; margin-bottom: 16px; flex:1">
          <i class="material-icons mdl-list__item-icon">menu_book</i>
          <div style="display:flex; flex-direction: column; margin-left: 5px; ">
            <p>
              <b>Description:</b>
              {{{__content}}}
            </p>
          </div>
        </div>
      </div>

    </main>
  </div>


  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
</body>

</html>
